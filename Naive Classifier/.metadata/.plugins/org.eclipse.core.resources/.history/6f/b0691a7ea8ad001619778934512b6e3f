package classifierbayesnaive;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

public class Classifier {
	static ArrayList<Integer> trainLabels = new ArrayList();
	public static void main(String args[]){
		try{
			inputLabelHandle("facedatatrainlabels");
		}catch(Exception e){
			System.out.println("train "+e);
		}
	}
	public static void inputLabelHandle(String filename)throws IOException {
		BufferedReader br = new BufferedReader(new FileReader(filename));
		String line=null;
		int i = 0;
		while( (line=br.readLine()) != null) {
			i++;
			trainLabels[i] = Integer.parseInt(line);
		}       
		System.out.println(trainLabels.length);
		br.close();
	}
}
